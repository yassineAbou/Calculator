<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="prevOperation"
            type="com.example.calculator0.database.PrevOperation" />
        <variable
            name="prevOperationActions"
            type="com.example.calculator0.ui.calculator.PrevOperationActions" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:gravity="end"
        android:paddingStart="@dimen/_15sdp"
        android:textAlignment="viewEnd"
        android:textColor="?attr/textColor"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:autoSizeTextType="uniform"
        setTextInput="@{prevOperation}"
        tools:text="15+15"
        android:paddingEnd="0dp"
        android:onClick="@{() -> prevOperationActions.addPrevInput(prevOperation)}"
        />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="end"
        android:paddingStart="@dimen/_15sdp"
        android:textColor="@color/purple"
        android:textSize="@dimen/_18ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input"
        app:autoSizeTextType="uniform"
        setTextResult="@{prevOperation}"
        tools:text="30"
        android:paddingEnd="0dp"
        android:onClick="@{() -> prevOperationActions.addPrevResult(prevOperation)}"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>