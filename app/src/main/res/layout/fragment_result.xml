<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.calculator0.ui.emi.EMIViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.emi.ResultFragment"
        android:background="?attr/bgColor4">

        <View
            android:id="@+id/background2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/radius_border"
            app:layout_constraintBottom_toBottomOf="@id/view6"
            app:layout_constraintEnd_toEndOf="@id/textView"
            app:layout_constraintHorizontal_bias="0.079"
            app:layout_constraintStart_toStartOf="@id/textView"
            app:layout_constraintTop_toTopOf="@id/textView"
            app:layout_constraintVertical_bias="1.0"
            android:backgroundTint="?attr/bgColor5"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/emi_amount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/_15ssp"
            android:textColor="?attr/textColor2"
            android:paddingTop="26dp"
            />

        <TextView
            android:id="@+id/emiAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            tools:text="2,394.32"
            android:textColor="?attr/textColor3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:textSize="@dimen/_35ssp"
            android:text="@{viewModel.emiFirstResult.emiMonth}"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/per_month"
            android:textColor="?attr/textColor2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emiAmount"
            android:textSize="@dimen/_15ssp"/>

        <TextView
            android:id="@+id/installments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/_installments"
            android:layout_marginTop="6dp"
            android:textColor="?attr/textColor2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:textSize="@dimen/_15ssp"
            android:text= "@{String.format(@string/_installments, viewModel.emiFirstResult.installment)}"/>

        <TextView
            android:id="@+id/totalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            tools:text="@string/total"
            android:textSize="@dimen/_15ssp"
            android:textColor="?attr/textColor3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/installments"
            android:text= "@{String.format(@string/total, viewModel.emiFirstResult.total)}"/>

        <TextView
            android:id="@+id/principal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_19sdp"
            android:layout_marginTop="26dp"
            tools:text="5000000"
            android:textColor="?attr/textColor3"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/totalAmount"
            android:text="@{viewModel.emiFirstResult.principal}"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginStart="@dimen/_19sdp"
            android:textSize="@dimen/_15ssp"
            android:text="@string/_principal"
            android:textColor="?attr/textColor2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/principal" />

        <TextView
            android:id="@+id/interest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="55555555"
            android:textColor="?attr/textColor3"
            android:textSize="@dimen/_15ssp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="@dimen/_19sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/totalAmount"
            android:text="@{viewModel.emiFirstResult.interest}"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="@dimen/_19sdp"
            android:text="@string/_interest"
            android:textSize="@dimen/_15ssp"
            android:textColor="?attr/textColor2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/interest" />

        <View
            android:id="@+id/view5"
            android:layout_width="@dimen/_270sdp"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="19dp"
            android:background="?attr/bgColor2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/_compare"
            android:textSize="@dimen/_15ssp"
            android:textColor="?attr/textColor2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view5" />

        <View
            android:id="@+id/view6"
            android:layout_width="12dp"
            android:layout_height="3dp"
            android:layout_marginTop="19dp"
            android:backgroundTint="?attr/bgColor5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <Button
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:background="@drawable/radius_button"
            android:paddingStart="@dimen/_45sdp"
            android:paddingTop="4dp"
            android:paddingEnd="@dimen/_45sdp"
            android:paddingBottom="4dp"
            android:text="@string/text5"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/white"
            app:backgroundTint="@color/purple_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <ImageButton
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginStart="@dimen/_19sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view5"
            app:srcCompat="@drawable/ic_baseline_add_24"
            android:backgroundTint="?attr/bgColor5"
            android:contentDescription="add" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>